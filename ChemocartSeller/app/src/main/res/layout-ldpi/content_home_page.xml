<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background_home"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home_page"
    tools:showIn="@layout/app_bar_home_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/Background"
        android:orientation="horizontal"
        >

    <TextView
        android:id="@+id/content_1"
        android:layout_width="250dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="  GST : 123456789"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/Splash"
        android:layout_alignParentLeft="true" />
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/button_shape_home">
            <ImageView
                android:id="@+id/image_active"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:src="@drawable/ellipse_active"/>
            <TextView
            android:id="@+id/Profile"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Active"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/Background"
        />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:background="@color/Background"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Personal Information"
            android:textColor="@color/ButtonColor2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/name_"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Dilshad Akhtar"
            android:textColor="@color/Splash"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/mobile_"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="9163254835"
            android:textColor="@color/Splash"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/image" />

    </RelativeLayout>
        <TextView
            android:id="@+id/about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textAlignment="textStart"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="118dp"
            android:textColor="@color/Splash"
            android:text=" About : We at just chemical established in 1982 are one of the pioneer manufacturers, distributors,importers &amp; product developers of chemicals and chemical specialities for industries"
            android:layout_alignParentLeft="true"
            android:gravity="start" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/relative"
        android:layout_marginTop="155dp"
        android:background="@color/Background"
        android:layout_alignParentLeft="true">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/button_home"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Total Orders"
            android:textColor="@color/ButtonColor2"
            android:textSize="15sp"
            android:layout_alignLeft="@+id/textView9" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/button_home"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_alignTop="@+id/textView3"
            android:gravity="center"
            android:text="Total Payment"
            android:textColor="@color/ButtonColor2"
            android:textSize="15sp"
            android:layout_alignLeft="@+id/textView10" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/button_home"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="20dp"
            android:background="@drawable/button_shape_home"
            android:gravity="center"
            android:text="Orders : 35"
            android:textColor="@color/Background"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="@dimen/button_home"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView3"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_shape_home"
            android:gravity="center"
            android:text="Rs 20,230"
            android:textColor="@color/Background"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="@dimen/button_home"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="Total Products Added"
            android:textColor="@color/ButtonColor2"
            android:textSize="14sp"
            android:layout_alignLeft="@+id/textView3" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="@dimen/button_home"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="-39dp"
            android:background="@drawable/button_shape_home"
            android:gravity="center"
            android:text="Products : 5"
            android:textColor="@color/Background"
            android:layout_alignLeft="@+id/textView5" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="@dimen/button_home"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignTop="@+id/textView7"
            android:gravity="center"
            android:text="Payment Information"
            android:textColor="@color/ButtonColor2"
            android:textSize="15sp"
            android:layout_alignLeft="@+id/textView6" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="@dimen/button_home"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="-40dp"
            android:background="@drawable/button_shape_home"
            android:gravity="center"
            android:text="View"
            android:textColor="@color/Background"
            android:layout_alignLeft="@+id/textView4" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_home"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/relative1"
        android:layout_marginTop="135dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/button_shape2"
        android:text="Add New Product"
        android:textColor="@color/Background"
        android:textAllCaps="false"
        android:layout_marginLeft="23dp" />

    <Button
        android:id="@+id/button1_home"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/relative1"
        android:layout_alignEnd="@+id/relative1"
        android:layout_marginTop="135dp"
        android:background="@drawable/button_shape2"
        android:text="Update Price"
        android:textColor="@color/Background"
        android:textAllCaps="false"
        android:layout_marginRight="28dp"
        android:layout_alignRight="@+id/relative1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        >

    </android.support.v4.view.ViewPager>

</RelativeLayout>